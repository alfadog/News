{
  "name": "news-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace apps/web",
    "dev:cms": "npm run dev --workspace apps/cms",
    "dev:ingest": "npm run dev --workspace apps/ingest",
    "dev:worker": "npm run dev --workspace apps/worker",
    "build:packages": "npm run build --workspace packages/shared --workspace packages/rules --if-present",
    "build:web": "npm run build:packages && npm run build --workspace apps/web",
    "build:cms": "npm run build --workspace apps/cms",
    "build": "npm run build:web",
    "lint": "npm run lint --workspace apps/web",
    "seed": "npm run seed --workspace apps/cms",
    "vercel-build": "npm run build:web",
    "ci:verify": "npm install && npm run build:web && npm run build:cms"
  },
  "devDependencies": {
    "typescript": "^5.4.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  }
}
